<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:paddingTop="15dip"
    android:paddingBottom="15dip" >
    
    <ImageButton
        android:id="@+id/action_bar_btn_back"
        android:onClick="onClick"
        android:layout_width="40dip"
        android:layout_height="20dip"
        android:layout_marginLeft="15dip"
        android:src="@drawable/image_back_white"
        android:scaleType="fitXY"
        android:contentDescription="@string/descr_image"
        android:background="@color/transparent" />
    
    <ImageButton
        android:id="@+id/action_bar_btn_like"
        android:onClick="onClick"
        android:layout_width="24dip"
        android:layout_height="20dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dip"
        android:src="@drawable/image_like_white"
        android:scaleType="fitXY"
        android:contentDescription="@string/descr_image"
        android:background="@color/transparent" />
    
    <ImageButton
        android:id="@+id/action_bar_btn_share"
        android:onClick="onClick"
        android:layout_width="15dip"
        android:layout_height="20dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:src="@drawable/image_share_white"
        android:scaleType="fitXY"
        android:contentDescription="@string/descr_image"
        android:background="@color/transparent" />
    
</RelativeLayout>