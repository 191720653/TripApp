<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip" >

    <TextView
        android:id="@+id/item_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginStart="12dip"
        android:layout_marginTop="12dip"
        android:text="@string/view_title_person"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_view_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_view_title"
        android:layout_marginLeft="18dip"
        android:layout_marginStart="18dip"
        android:layout_marginRight="12dip"
        android:layout_marginEnd="12dip"
        android:layout_marginTop="6dip"
        android:text="@string/view_content_person"
        android:textColor="@color/gray"
        android:textSize="12sp" />

</RelativeLayout>