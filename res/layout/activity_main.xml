<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/image_main_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_relativeLayout_header"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:background="@drawable/image_nanqu" >

        <ImageButton
            android:id="@+id/main_culture"
            android:layout_width="21dip"
            android:layout_height="21dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dip"
            android:layout_marginStart="13dip"
            android:layout_marginTop="13dip"
            android:background="@color/transparent"
            android:contentDescription="@string/descr_image"
            android:scaleType="fitXY"
            android:src="@drawable/image_menu"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/main_textView_nanqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_textView_trip"
            android:layout_alignLeft="@+id/main_textView_trip"
            android:layout_alignStart="@+id/main_textView_trip"
            android:text="@string/main_title"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_textView_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="20dip"
            android:layout_marginEnd="20dip"
            android:text="@string/main_sub_title"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_liangdu"
        android:onClick="onClick"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:baselineAligned="false" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/transparent" >
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/view"
            android:layout_toEndOf="@+id/view"
            android:background="@drawable/image_liangdu" >

            <TextView
                android:id="@+id/main_tv_ld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginStart="15dip"
                android:ems="1"
                android:text="@string/main_tv_liangdu"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_beixi"
        android:onClick="onClick"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:baselineAligned="false" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/view_t"
            android:layout_toStartOf="@+id/view_t"
            android:background="@drawable/image_beixi" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dip"
                android:layout_marginEnd="15dip"
                android:ems="1"
                android:text="@string/main_tv_beixi"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_t"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/transparent" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_chengnan"
        android:onClick="onClick"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:baselineAligned="false" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/transparent" >
        </RelativeLayout>

        <View
            android:id="@+id/view_h"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/view_h"
            android:layout_toEndOf="@+id/view_h"
            android:background="@drawable/image_chengnan" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginStart="15dip"
                android:ems="1"
                android:text="@string/main_tv_chengnan"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_maling"
        android:onClick="onClick"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:baselineAligned="false" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/view_f"
            android:layout_toStartOf="@+id/view_f"
            android:background="@drawable/image_maling" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dip"
                android:layout_marginEnd="15dip"
                android:ems="1"
                android:text="@string/main_tv_maling"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_f"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/transparent" >
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>