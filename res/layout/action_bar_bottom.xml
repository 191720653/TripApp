<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="70dip" >

    <Button
        android:id="@+id/action_bar_btn_mine"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="51dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:text="@string/button_mine"
        android:textSize="14sp"
        android:background="@drawable/image_mine_button" />

    <ImageButton
        android:id="@+id/action_bar_btn_mines"
        android:onClick="onClick"
        android:layout_width="66dip"
        android:layout_height="38dip"
        android:layout_marginBottom="33dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:contentDescription="@string/descr_image"
        android:scaleType="fitXY"
        android:src="@drawable/image_mine" />

</RelativeLayout>