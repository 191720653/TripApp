<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:orientation="horizontal"
    android:paddingBottom="15dip"
    android:paddingTop="15dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/action_bar_btn_back"
            android:onClick="onClick"
            android:layout_width="40dip"
            android:layout_height="20dip"
            android:layout_marginLeft="15dip"
            android:layout_marginStart="15dip"
            android:background="@color/transparent"
            android:contentDescription="@string/descr_image"
            android:scaleType="fitXY"
            android:src="@drawable/image_back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/action_bar_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/action_bar_check"
        android:textColor="@color/main_yellow"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/action_bar_advice"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/action_bar_advice"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/action_bar_btn_share"
            android:onClick="onClick"
            android:layout_width="15dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dip"
            android:layout_marginEnd="15dip"
            android:background="@color/transparent"
            android:contentDescription="@string/descr_image"
            android:scaleType="fitXY"
            android:src="@drawable/image_share" />
    </RelativeLayout>

</LinearLayout>